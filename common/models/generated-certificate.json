{
  "name": "Certificate",
  "plural": "Certificates",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": true
  },
  "properties": {
    "verificationUrl": {
      "type": "string",
      "required": false
    },
    "isApproved": {
      "type": "Boolean"
    },
    "isVoid": {
      "type": "Boolean",
      "default": false
    },
    "isPrinted": {
      "type": "Boolean",
      "default": false
    },
    "pin": {
      "type": "string",
      "required": false
    },
    "identifier": {
      "type": "string"
    },
    "print": {
      "type": "string",
      "required": false,
      "mysql": {
        "columnName": "Template",
        "dataType": "LONGTEXT",
        "nullable": "N"
      }
    },
    "googleFonts": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "approvals": {
      "type": "hasMany",
      "model": "Staff",
      "foreignKey": "certificatedId",
      "options": {
        "nestRemoting": true
      },
      "through": "Approval"
    },
    "candidate": {
      "type": "belongsTo",
      "model": "Candidate",
      "foreignKey": "candidateId",
      "options": {
        "nestRemoting": true
      }
    },
    "certification": {
      "type": "belongsTo",
      "model": "Certification",
      "foreignKey": "certificationId",
      "options": {
        "nestRemoting": true
      }
    },
    "institute": {
      "type": "belongsTo",
      "model": "Institute",
      "foreignKey": "instituteId",
      "options": {
        "nestRemoting": true
      }
    },
    "verifications": {
      "type": "hasMany",
      "model": "Verification",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "NFCTag": {
      "type": "hasOne",
      "model": "NFCTag",
      "foreignKey": "certificateId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
